<resources>

    <!-- Base application theme. -->
    <style name="AppThemeBlue" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <!-- Colors -->
        <item name="color_buttonBackground">#008ec7</item>
        <item name="color_buttonSourceStart">#008ec7</item>
        <item name="color_buttonSourceEnd">#025375</item>
    </style>

    <style name="JuraTextMedium" parent="android:Widget.TextView">
        <item name="android:fontFamily">@font/jura_medium</item>
    </style>

    <style name="JuraTextBold" parent="android:Widget.TextView">
        <item name="android:fontFamily">@font/jura_bold</item>
    </style>

    <style name="JuraTextSemiBold" parent="android:Widget.TextView">
        <item name="android:fontFamily">@font/jura_semibold</item>
    </style>

    <style name="PopupTitle" parent="JuraTextBold">
        <item name="android:textSize">36sp</item>
        <item name="android:lineSpacingExtra">5.5sp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="ScreenTitle" parent="JuraTextMedium">
        <item name="android:textSize">48sp</item>
        <item name="android:lineSpacingExtra">5.5sp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="ErrorText" parent="JuraTextMedium">
        <item name="android:textSize">30sp</item>
        <item name="android:lineSpacingExtra">4.5sp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="ListItem" parent="JuraTextMedium">
        <item name="android:textSize">30sp</item>
        <item name="android:lineSpacingExtra">4.5sp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="PopupSpeed" parent="JuraTextMedium">
        <item name="android:textSize">48sp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="BaseButton" parent="android:Widget.Button">
        <item name="android:textSize">36sp</item>
        <item name="android:lineSpacingExtra">18sp</item>
        <item name="android:fontFamily">@font/jura_medium</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@drawable/selector_button</item>
    </style>

    <style name="DialogButton" parent="BaseButton">
        <item name="android:width">@dimen/button_dialog_width</item>
        <item name="android:height">@dimen/button_normal_height</item>
    </style>

    <style name="OvalButton" parent="Widget.AppCompat.ImageButton">
        <item name="android:background">@drawable/selector_button_oval</item>
        <item name="android:width">@dimen/oval_button_width</item>
        <item name="android:height">@dimen/oval_button_height</item>
    </style>

    <style name="PopupOvalButton" parent="Widget.AppCompat.ImageButton">
        <item name="android:background">@drawable/selector_button_popup_oval</item>
        <item name="android:width">@dimen/oval_button_width</item>
        <item name="android:height">@dimen/oval_button_height</item>
    </style>

</resources>
